@inherits EditEscolaPageBase

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Editar Escola</MudText>
    </TitleContent>
    <DialogContent>
        <EditForm Model="@InputModel" OnValidSubmit="OnValidSubmitAsync">
            <DataAnnotationsValidator />
            <MudGrid>
                <MudItem xs="12">
                    <MudTextField @bind-Value="InputModel.Nome" Label="Nome da Escola" HelperText="Campo obrigatório" For="() => InputModel.Nome" Margin="Margin.Dense"/>
                </MudItem>
                <MudItem xs="12">
                    <MudTextField @bind-Value="InputModel.Endereco" Label="Endereço da Escola" HelperText="Campo opcional" For="() => InputModel.Endereco" Margin="Margin.Dense"/>
                </MudItem>
                <MudItem xs="12">
                    <MudTextField @bind-Value="InputModel.Telefone" Label="Telefone da Escola" HelperText="Campo opcional" For="() => InputModel.Telefone" Margin="Margin.Dense"/>
                </MudItem>
            </MudGrid>
        </EditForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@(() => DialogInstance.Cancel())">Cancelar</MudButton>
        @if (IsBusy)
        {
            <MudProgressCircular Color="Color.Primary" Indeterminate="true"/>
        }
        else
        {
            <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" OnClick="OnValidSubmitAsync">Salvar</MudButton>
        }
    </DialogActions>
</MudDialog>
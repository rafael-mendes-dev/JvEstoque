@inherits FaturamentoComponentBase

<MudPaper Class="pa-4 d-flex flex-column justify-center align-center mud-width-full py-8" Elevation="2">
    <MudText Typo="Typo.h6" Class="mb-4">Faturamento Total</MudText>
        
    @if (IsBusy)
    {
        <div class="d-flex justify-center align-center" style="height: 300px;">
            <MudProgressCircular Indeterminate="true" />
        </div>
    }
    else
    {
        <MudText Color="Color.Success" Typo="Typo.h3">@Faturamento.ToString("C")
            <MudIcon Icon="@Icons.Material.Rounded.TrendingUp" Size="Size.Large"/></MudText>
    }
</MudPaper>
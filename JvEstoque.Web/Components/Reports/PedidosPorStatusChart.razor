@inherits PedidosPorStatusChartComponent

<MudPaper Class="pa-4 d-flex flex-column justify-center align-center mud-width-full py-8" Elevation="2">
    <MudText Typo="Typo.h6" Class="mb-4">Pedidos por Status<MudSpacer/>Total de pedidos: @Data.Sum().ToString()</MudText>
    
    @if (IsBusy)
    {
        <div class="d-flex justify-center align-center" style="height: 300px;">
            <MudProgressCircular Indeterminate="true" />
        </div>
    }
    else
    {
        <MudChart ChartType="ChartType.Donut"
                  @bind-SelectedIndex="Index"
                  InputData="Data"
                  InputLabels="Labels"
                  Width="200px"
                  Height="200px"
                  LegendPosition="Position.Bottom">
        </MudChart>
    }
</MudPaper>

                <div style="display: flex; align-items: center; justify-content: space-between;">
                    <MudText Typo="Typo.h5">Escolas</MudText>
                    <MudIcon Icon="@Icons.Material.Rounded.School" Size="Size.Large" />
                </div>
                <MudText Typo="Typo.subtitle1">Ir para seção de escolas.</MudText>
            </MudPaper>
        </div>
        <div style="flex: 1; max-width: 400px;" onclick="@(() => NavigationManager.NavigateTo("/pedidos"))">
            <MudPaper Class="card-link" Style="background: transparent; cursor: pointer; padding: 32px; min-height: 180px; box-shadow: 0 4px 16px rgba(0,0,0,0.5); border: 2px solid var(--mud-palette-primary);" Elevation="2" Outlined="true">
                <div style="display: flex; align-items: center; justify-content: space-between;">
                    <MudText Typo="Typo.h5">Pedidos</MudText>
                    <MudIcon Icon="@Icons.Material.Rounded.Receipt" Size="Size.Large" />
                </div>
                <MudText Typo="Typo.subtitle1">Ir para seção de pedidos.</MudText>
            </MudPaper>
        </div>
    </div>
    <div style="display: flex; justify-content: center; align-items: center; gap: 32px; width: 100%;">
        <div style="flex: 1; max-width: 400px;" onclick="@(() => NavigationManager.NavigateTo("/produtos"))">
            <MudPaper Class="card-link" Style="background: transparent; cursor: pointer; padding: 32px; min-height: 180px; box-shadow: 0 4px 16px rgba(0,0,0,0.5); border: 2px solid var(--mud-palette-primary);" Elevation="2" Outlined="true">
                <div style="display: flex; align-items: center; justify-content: space-between;">
                    <MudText Typo="Typo.h5">Produtos</MudText>
                    <MudIcon Icon="@Icons.Material.Rounded.Category" Size="Size.Large" />
                </div>
                <MudText Typo="Typo.subtitle1">Ir para seção de produtos.</MudText>
            </MudPaper>
        </div>
    </div>
</div>